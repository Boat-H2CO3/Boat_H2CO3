<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!---CardView-->
    <style name="Theme.H2CO3.CardViewOutlined" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="contentPaddingStart">@dimen/app_16dp</item>
        <item name="contentPaddingEnd">@dimen/app_16dp</item>
        <item name="contentPaddingLeft">@dimen/app_16dp</item>
        <item name="contentPaddingRight">@dimen/app_16dp</item>
        <item name="contentPaddingTop">@dimen/app_16dp</item>
        <item name="contentPaddingBottom">@dimen/app_16dp</item>
    </style>

    <style name="Theme.H2CO3.CardViewOutlined.NoStroke" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="contentPaddingStart">@dimen/app_16dp</item>
        <item name="contentPaddingEnd">@dimen/app_16dp</item>
        <item name="contentPaddingLeft">@dimen/app_16dp</item>
        <item name="contentPaddingRight">@dimen/app_16dp</item>
        <item name="contentPaddingTop">@dimen/app_16dp</item>
        <item name="contentPaddingBottom">@dimen/app_16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.H2CO3.CardViewElevated" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="contentPaddingStart">@dimen/app_16dp</item>
        <item name="contentPaddingEnd">@dimen/app_16dp</item>
        <item name="contentPaddingLeft">@dimen/app_16dp</item>
        <item name="contentPaddingRight">@dimen/app_16dp</item>
        <item name="contentPaddingTop">@dimen/app_16dp</item>
        <item name="contentPaddingBottom">@dimen/app_16dp</item>
        <item name="cardElevation">@dimen/elevation_2</item>
    </style>

    <style name="Theme.H2CO3.CardViewFilled" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="contentPaddingStart">@dimen/app_16dp</item>
        <item name="contentPaddingEnd">@dimen/app_16dp</item>
        <item name="contentPaddingLeft">@dimen/app_16dp</item>
        <item name="contentPaddingRight">@dimen/app_16dp</item>
        <item name="contentPaddingTop">@dimen/app_16dp</item>
        <item name="contentPaddingBottom">@dimen/app_16dp</item>
        <item name="cardElevation">@dimen/elevation_0</item>
    </style>

    <style name="Theme.H2CO3.CardViewNormal" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="contentPaddingStart">@dimen/app_16dp</item>
        <item name="contentPaddingEnd">@dimen/app_16dp</item>
        <item name="contentPaddingLeft">@dimen/app_16dp</item>
        <item name="contentPaddingRight">@dimen/app_16dp</item>
        <item name="contentPaddingTop">@dimen/app_16dp</item>
        <item name="contentPaddingBottom">@dimen/app_16dp</item>
    </style>

    <style name="Theme.H2CO3.IconMaterial">
        <item name="android:layout_marginRight">@dimen/app_15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tint">?colorOnPrimaryContainer</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTint">?colorPrimaryContainer</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="Theme.H2CO3.IconNormal">
        <item name="android:layout_marginRight">@dimen/app_15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTint">?colorPrimaryContainer</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="Theme.H2CO3.CardButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconPadding">12dp</item>
    </style>

    <style name="Theme.H2CO3.CardTitle">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="Theme.H2CO3.CardContent">
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>


    <style name="TextAppearance.H2CO3.TitleLarge.Bold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.H2CO3.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/material_on_background_disabled</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTheme.TabLayout.Title" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ShapeOverlay.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.ShapeAppearance.MainFragment.Logo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="AppTheme.ShapeOverlay.TemplateImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AppTheme.MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/MaterialDialog.ShapeAppearance</item>
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="MaterialDialog.ShapeAppearance" parent="">
        <item name="cornerSize">@dimen/card_radius</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="AppTheme.SheetAboveKeyboard" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>
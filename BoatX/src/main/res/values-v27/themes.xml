<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.Material3.Light">
        <!-- Color Theme: https://material.io/develop/android/theming/color/ -->
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/material_blue_light</item>
        <item name="colorSecondaryVariant">@color/material_blue_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/material_card_background</item>
        <item name="android:windowBackground">@color/material_background</item>
        <item name="cardForegroundColor">@color/material_blue</item>
        <item name="android:statusBarColor">@color/material_card_background</item>
    </style>
</resources>